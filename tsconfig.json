{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es5", "dom"],
    "removeComments": false,
    "noImplicitAny": false,
    "types": [
      "core-js", 
      "node"    
      ]
  },
  "exclude": [
    "node_modules/*",
    "**/*-aot.ts"
  ]
}